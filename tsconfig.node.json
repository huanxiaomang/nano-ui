{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "internal/**/*",
    "internal/**/*.json",
    "scripts/**/*",
    "packages/theme/*",
    "packages/nano-ui/package.json",
    "packages/nano-ui/build/hooksPlugin.ts"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
